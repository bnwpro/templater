<%= form_for([@user, @campaign, @campaign_contact]) do |f| %>
  <% if @campaign_contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign_contact.errors.count, "error") %> prohibited this campaign_contact from being saved:</h2>

      <ul>
      <% @campaign_contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: 'Enter full name' %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, us_states, prompt: 'Select State' %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, placeholder: '10 Digits only, no spaces, () or -' %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
