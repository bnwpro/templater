			<%= formatted_date(@campaign.event.print_vis_comm_mtg_1) %><br>
			<%= formatted_date(@campaign.event.leadership_team_trng) %><br>
			<%= formatted_date(@campaign.event.pacesetter_gift_pln_mtg_1) %><br>
			<%= formatted_date(@campaign.event.ac_mtg_1) %><br>
			<%= formatted_date(@campaign.event.leadership_team_rpt_mtg_1) %><br>
			<%= formatted_date(@campaign.event.pacesetter_gift_pln_mtg_2) %><br>
			<%= formatted_date(@campaign.event.ac_mtg_2) %><br>
			<%= formatted_date(@campaign.event.pastor_cmp_mtg_2) %><br>
			<%= formatted_date(@campaign.event.contact_team_trng_1) %><br>
			<%= formatted_date(@campaign.event.leadership_team_rpt_mtg_2) %><br>
			<%= formatted_date(@campaign.event.ac_mtg_3) %><br>
			<%= formatted_date(@campaign.event.follow_up_mtg) %><br>
			<%= formatted_date(@campaign.event.pacesetter_gift_pln_mtg_3) %><br>
			<%= formatted_date(@campaign.event.leadership_team_rpt_mtg_3) %><br>
			<%= formatted_date(@campaign.event.ac_gather_1) %><br>
			<%= formatted_date_to_tomorrow(@campaign.event.weekend_4_dates) %>
		</div>
		
		<div class="center-column">
			<%= formatted_time(@campaign.event.campaign_admin_trng) %><br>
			<%= formatted_time(@campaign.event.involvement_ldr_trng) %><br>
			<%= formatted_time(@campaign.event.pastor_cmp_mtg_1) %><br>
			<%= formatted_time(@campaign.event.print_vis_comm_mtg_1) %><br>
			<%= formatted_time(@campaign.event.leadership_team_trng) %><br>
			<%= formatted_time(@campaign.event.pacesetter_gift_pln_mtg_1) %><br>
			<%= formatted_time(@campaign.event.ac_mtg_1) %><br>
			<%= formatted_time(@campaign.event.leadership_team_rpt_mtg_1) %><br>
			<%= formatted_time(@campaign.event.pacesetter_gift_pln_mtg_2) %><br>
			<%= formatted_time(@campaign.event.ac_mtg_2) %><br>
			<%= formatted_time(@campaign.event.pastor_cmp_mtg_2) %><br>
			<%= formatted_time(@campaign.event.contact_team_trng_1) %><br>
			<%= formatted_time(@campaign.event.leadership_team_rpt_mtg_2) %><br>
			<%= formatted_time(@campaign.event.ac_mtg_3) %><br>
			<%= formatted_time(@campaign.event.follow_up_mtg) %><br>
			<%= formatted_time(@campaign.event.pacesetter_gift_pln_mtg_3) %><br>
			<%= formatted_time(@campaign.event.leadership_team_rpt_mtg_3) %><br>
			<%= formatted_time(@campaign.event.ac_gather_1) %><br>
		</div>

		<div id="list_data" class="right-column">
			<span>Campaign Administrator Training</span><br>
			<span>Involvement Leader Training</span><br>
			<span>Pastor &amp; Campaign Chairs w/Consultant</span><br>
			<span>Print &amp; Visual Leaders</span><br>
			<span>Leadership Team Training</span><br>
			<span>Pacesetter Gifts Meeting #1</span><br>
			<span>Advance Commitment Meeting #1</span><br>
			Leadership Team Report Meeting #1<br>
			Pacesetter Gifts Meeting #2<br>
			Advance Commitment Meeting #2<br>
			<span>Pastor &amp; Campaign Chairs w/Consultant</span><br>
			Contact Team Training<br>
			Leadership Team Report Meeting #2<br>
			Advance Commitment Meeting #3<br>
