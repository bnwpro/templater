<p id="notice"><%= notice %></p>
<h1>Adminstration: Listing users</h1>

<table>
  <thead>
    <tr>
	  <th>User ID</th>
	  <th>First Name</th>
	  <th>Last Name</th>
	  <th>Email</th>
	  <th>Phone</th>
	  <th>City</th>
	  <th>State</th>
	  <th>Zip</th>
	  <th>Is Admin?</th>
	  <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
		<td><%= user.id %></td>
		<td><%= user.first_name %></td>
		<td><%= user.last_name %></td>
		<td><%= user.email %></td>
		<td><%= number_to_phone(user.phone, :area_code => :true) %></td>
		<td><%= user.city %></td>
		<td><%= user.state %></td>
		<td><%= user.zip %></td>
		<td><%= user.admin %></td>
		<td><%= link_to 'View Campaigns', user_campaigns_path(user) %></td>
        <!--<td><%= link_to 'Show', user %></td>-->
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete_link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>